<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/addnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Add New post" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addnew"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:padding="15dp"
            android:text="Choose file"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

        <EditText
                android:fontFamily="@font/open_sans"
            android:id="@+id/blood_camp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Camp name"
            android:textColorHint="@color/grey"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_baseline_campaign_24"
            android:background="@drawable/overlay"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:layout_margin="15dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            />
            <EditText
                android:fontFamily="@font/open_sans"
                android:id="@+id/organizer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Organizer name"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:background="@drawable/overlay"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                />
            <EditText
                android:fontFamily="@font/open_sans"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Description"
                android:maxLines="4"
                android:lines="4"
                android:textColorHint="@color/grey"
                android:inputType="textMultiLine"
                android:drawableLeft="@drawable/ic_baseline_description_24"
                android:background="@drawable/overlay"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                />
            <EditText
                android:fontFamily="@font/open_sans"
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Location"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:background="@drawable/overlay"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button_choose_date"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:onClick="chooseDate"
                    android:background="@drawable/button"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:text="Choose date" />
                <TextView
                    android:id="@+id/choosed_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/open_sans"
                    android:hint=" 12-03-2022"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:background="@drawable/overlay"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button_choose_time"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:onClick="choosenTime"
                    android:background="@drawable/button"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans"
                    android:text="Choose Time" />
                <TextView
                    android:id="@+id/choosed_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint=" 09:00:AM"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_baseline_access_time_24"
                    android:background="@drawable/overlay"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_margin="15dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    />
            </LinearLayout>
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp" />
        <Button
            android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/open_sans"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/button"
            android:text="Upload" />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>

